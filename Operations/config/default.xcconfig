LIBRARY_SEARCH_PATHS = $(PROJECT_DIR)/../3rd_Party/libarchive/built $(PROJECT_DIR)/../3rd_Party/boost/built $(PROJECT_DIR)/../3rd_Party/OpenSSL/built

VALID_ARCHS = x86_64
MACOSX_DEPLOYMENT_TARGET = 10.11

OTHER_LDFLAGS = -larchive -lboost_system-mt -lboost_filesystem-mt -lz -lssl -lcrypto -llzma -lbz2 -framework AppKit -framework DiskArbitration -framework Foundation -framework SystemConfiguration -framework ServiceManagement -framework Security -framework Cocoa -framework OpenDirectory -framework QuartzCore -framework IOKit -lVFS

ALWAYS_SEARCH_USER_PATHS = NO
USE_HEADERMAP = NO

CLANG_ENABLE_OBJC_ARC = YES

ENABLE_STRICT_OBJC_MSGSEND = YES

